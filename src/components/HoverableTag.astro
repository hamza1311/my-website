---
const {
    animation = "duration-200 ease-in-out",
    link = false,
    href, target, rel,
    ...rest
} = Astro.props

const Element = link ? 'a': 'span';
---

<Element
    class={`p-3 text-center shadow-lg transition hover:-translate-y-2 dark:shadow-xl ${animation}`}
    href={href}
    target={target}
    rel={rel}
>
    <slot />
</Element>
