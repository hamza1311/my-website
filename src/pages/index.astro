---
import ProjectsList from "../components/ProjectsList.astro"
import AnimatedBottomBorderLink from "../components/AnimatedBottomBorderLink.tsx"
import BaseLayout from "../layouts/BaseLayout.astro"
import GitHubIcon from "../icons/GitHub.tsx"
import LinkedInIcon from "../icons/LinkedIn.tsx"
import HoverableTag from "../components/HoverableTag.astro"

const metaUrl = "https://mhamza.dev"
---

<BaseLayout>
    <meta slot="head" name="og:url" content={metaUrl} />
    <meta slot="head" name="twitter:url" content={metaUrl} />

    <style lang="scss" slot="head">
        .link-button {
            max-height: 48px;
            max-width: 48px;

            &#resume-icon {
                height: 50px;
                width: 50px;
            }
        }

        .data-section {
            @apply flex flex-col gap-10 content-center items-center justify-center mt-24;
        }
    </style>

    <main>
        <section class="data-section">
            <h1 class="text-center">
                Hi, I am
                <span class="text-pink-700 dark:text-pink-500">
                    Muhammad Hamza.
                </span>
            </h1>
            <h2>A Web Developer</h2>
            <p class="-mt-7 text-lg">and a lover of anime and technology.</p>

            <div class="flex justify-center gap-4">
                <!-- <AnimatedBottomBorderLink href="#" ariaLabel="My Resume">
                <ResumeIcon className="w-12" />
            </AnimatedBottomBorderLink> -->
                <AnimatedBottomBorderLink
                    href="https://github.com/hamza1311/"
                    target="_blank"
                    ariaLabel="My GitHub"
                >
                    <GitHubIcon />
                </AnimatedBottomBorderLink>
                <AnimatedBottomBorderLink
                    href="https://www.linkedin.com/in/hamza1311/"
                    target="_blank"
                    ariaLabel="My LinkedIn"
                >
                    <LinkedInIcon />
                </AnimatedBottomBorderLink>
            </div>
        </section>

        <section class="data-section" id="projects">
            <h2>Projects</h2>

            <ProjectsList />
        </section>

        <section class="data-section" id="skills">
            <h2>Skills</h2>

            <div class="grid grid-cols-2 gap-5 md:grid-cols-3">
                <HoverableTag>Rust</HoverableTag>
                <HoverableTag>Yew</HoverableTag>
                <HoverableTag>TypeScript</HoverableTag>
                <HoverableTag>React</HoverableTag>
                <HoverableTag>Next.JS</HoverableTag>
                <HoverableTag>Kotlin</HoverableTag>
                <HoverableTag>HTML</HoverableTag>
                <HoverableTag>CSS</HoverableTag>
            </div>
        </section>

        <section class="data-section mb-12" id="contact">
            <h2>Contact</h2>

            <div class="grid grid-cols-1 gap-5 md:grid-cols-3">
                <HoverableTag
                    link={true}
                    href="mailto:muhammadhamza1311@gmail.com"
                    animation="hover:scale-110 duration-300"
                >
                    Email
                </HoverableTag>
                <HoverableTag
                  link={true}
                    href="https://matrix.to/#/@weeb69:matrix.org"
                    target="_blank"
                    animation="hover:scale-110 duration-300"
                    rel="noopener"
                >
                    Matrix
                </HoverableTag>

                <HoverableTag
                  link={true}
                    href="https://join.skype.com/invite/x8AE3hSWgddE"
                    target="_blank"
                    animation="hover:scale-110 duration-300"
                    rel="noopener"
                >
                    Skype
                </HoverableTag>
            </div>
        </section>
    </main>
</BaseLayout>
